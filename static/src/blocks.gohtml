<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blocks</title>
    <link rel="stylesheet" href="/static/css/bootstrap.css">
    <!-- <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet"> -->
  </head>

  <body>

    {{template "navBar"}}

    <div class="clr"></div>

    <section>
      <div class="container">
        <div class="table-title">
          <h3>Latest Blocks</h3>
        </div>
        <div class="data-table" id="block-table">
          <table class="table">
            <thead>
              <tr id="header-row">
                <th>Hash</th>
                <th>Timestamp</th>
                <th>NrFundsTX</th>
                <th>NrAccTX</th>
                <th>NrConfigTX</th>
              </tr>
            </thead>
            <tbody>
              {{range .}}
              <tr>
                <td> <a href="/block/{{.Hash}}">{{.Hash}}</a></td>
                <td>{{.Timestamp}}</td>
                <td>{{.NrFundTx}}</td>
                <td>{{.NrAccTx}}</td>
                <td>{{.NrConfigTx}}</td>
              </tr>
              {{end}}
            </tbody>
          </table>
        </div>
      </div>
    </section>

  </body>
</html>
