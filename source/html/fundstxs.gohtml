<!DOCTYPE html>
<html>

<head>

    {{template "head"}}

</head>

<body>

{{template "navBar"}}

<div class="clr"></div>

<section>
    <div class="container">
        <div class="table-title">
            <h3>Latest Funds Transactions</h3>
        </div>
        <div class="data-table" id="transactions-table">
            <table class="table">
                <thead>
                <tr id="header-row">
                    <th>Transaction-Hash</th>
                    <th>Sender-Account</th>
                    <th>Receiver-Account</th>
                    <th style="width: 10%;">Pearls-Total</th>
                    <th style="width: 10%;">Transaction-Fee</th>
                </tr>
                </thead>
                <tbody>
                {{range .Txs}}
                    <tr>
                        <td><a href="../../tx/funds/{{.Hash}}">{{.Hash}}</a></td>
                        <td><a href="../../account/{{.From}}">{{.From}}</a></td>
                        <td><a href="../../account/{{.To}}">{{.To}}</a></td>
                        <td>{{.Amount}}</td>
                        <td>{{.Fee}}</td>
                    </tr>
                {{end}}
                </tbody>
            </table>
        </div>
    </div>
</section>

{{template "scriptImports"}}

</body>
</html>
