<!DOCTYPE html>
<html>

  <head>

    {{template "head"}}

  </head>

  <body>

    {{template "navBar"}}

    <div class="clr"></div>

    <section>
      <div class="container">
        <div class="table-title">
          <h3>Top Accounts</h3>
        </div>
        <div class="data-table">
          <table class="table">
            <thead>
              <tr id="header-row">
                <th>Hash</th>
                <th>Address</th>
                <th style="width: 10%;">Balance</th>
                <th style="width: 10%;">TxCount</th>
              </tr>
            </thead>
            <tbody>
              {{range .}}
              <tr>
                <td><a href="/bazo/account/{{.Hash}}">{{.Hash}}</a></td>
                <td><a href="/bazo/account/{{.Address}}">{{.Address}}</a></td>
                <td>{{.Balance}}</td>
                <td>{{.TxCount}}</td>
              </tr>
              {{end}}
            </tbody>
          </table>
        </div>
      </div>
    </section>

    {{template "scriptImports"}}

  </body>
</html>
